																	    	<option value="{{ entry.id }}">{{ entry.name }}</option>
																	    {% endfor %}
																	</select>
																	<label>{{ trans.entry }}</label>
															    </div>
															</div>
															<div class="inline">
																<div class="form-check">
																	<select class="mdb-select colorful-select dropdown-success selection2" name="selection2">
																	    {% for meal in products[1] %}
