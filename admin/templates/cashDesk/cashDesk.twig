				        <button type="button" class="btn btn-info" id="payByCash"><i class="fa fa-credit-card"></i> {{ trans.payByCash}}</button>
				        <button type="button" class="btn btn-info" id="payByCB"><i class="fa fa-money"></i> {{ trans.payByCB}}</button>
				    </div>
				</div>
			</div>
