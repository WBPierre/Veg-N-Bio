{% extends 'base.twig' %}

{% set bodyClass = 'fixed-sn mdb-skin' %}
{% block content %}
    <section id="salesMenu" class="pb-3 text-center ">
        <div class="row verticalSize">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card collection-card z-depth-1-half">
                    <div class="view zoom">
                        <img src="../../../assets/images/boisson.jpg" class="img-fluid" alt="">
                        <div class="stripe dark choseItem">
                            <a>
                                <p>
                                    {{ trans.salesProducts.Drinks }}
                                    <i class="fa fa-angle-right"></i>
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 mb-2">
                <div class="card collection-card z-depth-1-half">
                    <div class="view zoom">
                        <img src="../../../assets/images/burger.jpg" class="img-fluid pictureSize" alt="">
                        <div class="stripe light">
                            <a>
                                <p>
                                    {{ trans.salesProducts.Burger }}
                                    <i class="fa fa-angle-right"></i>
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card collection-card z-depth-1-half">
                    <div class="view zoom">
                        <img src="../../../assets/images/soupe.jpg"class="img-fluid" alt="">
                        <div class="stripe dark">
                            <a>
                                <p>
                                    {{ trans.salesProducts.Soupe }}
                                    <i class="fa fa-angle-right"></i>
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card collection-card z-depth-1-half">
                    <div class="view zoom">
                        <img src="../../../assets/images/sandwich.jpg" class="img-fluid" alt="">
                        <div class="stripe light">
                            <a>
                                <p>
                                    {{ trans.salesProducts.Sandwich }}
                                    <i class="fa fa-angle-right"></i>
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{ trans.selectProduct }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <ul class="list-group">
                            <li id="Drink_1" class="list-group-item d-flex justify-content-between align-items-center selectProduct">
                                {{ trans.salesProducts.drink1 }}
                                <span class="badge badge-primary badge-pill counterProduct">0</span>
                            </li>
                            <li id="Drink_2" class="list-group-item d-flex justify-content-between align-items-center selectProduct">
                                {{ trans.salesProducts.drink2 }}
                                <span class="badge badge-primary badge-pill counterProduct">0</span>
                            </li>
                            <li id="Drink_3" class="list-group-item d-flex justify-content-between align-items-center selectProduct">
                                {{ trans.salesProducts.drink3 }}
                                <span class="badge badge-primary badge-pill counterProduct">0</span>
                            </li>
                        </ul>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ trans.salesProducts.close }}</button>
                        <button type="button" class="btn btn-primary">{{ trans.salesProducts.validate }}</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascript %}
    {% include 'salesInterface/js/salesInterface.js' %}
{% endblock %}
