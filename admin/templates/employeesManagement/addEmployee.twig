{% extends 'base.twig' %}

{% set bodyClass = 'fixed-sn mdb-skin' %}
{% block content %}

<main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
        <form action="var/FormDispatcher.php" method="POST">
			<input type="hidden" name="formName" value="addEmployee">
			<input type="hidden" name="id" value="{{ employee.id }}">
			<div class="modal-body">
				<h1>{{ trans.addEmployee }}</h1>
				<hr>
		        <div class="form-row">
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                    <input type="text" class="form-control" id="inputFirstname" name="firstname" value="{{ employee.firstname }}">
		                    <label for="inputFirstname">{{ trans.firstname }}</label>
		                </div>
		            </div>
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                    <input type="text" class="form-control" id="inputName" name="name" value="{{ employee.name }}">
		                    <label for="inputName">{{ trans.name }}</label>
		                </div>
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-md-12">
						<div class="inline">
							<div class="form-check">
						        <input class="form-check-input" type="radio" name="genderRadio" id="exampleRadiosInlin1" value="0" checked>
						        <label class="form-check-label" for="exampleRadiosInlin1">
						            Homme
						        </label>
						    </div>
						    <div class="form-check">
						        <input class="form-check-input" type="radio" name="genderRadio" id="exampleRadiosInlin2" value="1">
						        <label class="form-check-label" for="exampleRadiosInlin2">
						            Femme
						        </label>
						    </div>
						    <div class="form-check">
						        <input class="form-check-input" type="radio" name="genderRadio" id="exampleRadiosInlin3" value="2">
						        <label class="form-check-label" for="exampleRadiosInlin3">
						            Autre
						        </label>
						    </div>
						</div>						
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-md-12">
		                <div class="md-form form-group">
		                    <input type="email" class="form-control" id="inputEmail" name="email" value="{{ employee.email }}">
		                    <label for="inputEmail">Email</label>
		                </div>
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-md-12">
		                <div class="md-form form-group">
		                    <input type="password" class="form-control" id="inputPassword" name="password">
		                    <label for="inputPassword">{{ trans.password }}</label>
		                </div>
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-md-12">
		                <div class="md-form form-group">
		                    <input type="password" class="form-control" id="inputPasswordConfirmation" name="passwordConfirmation">
		                    <label for="inputPasswordConfirmation">{{ trans.passwordConfirmation }}</label>
		                </div>
		            </div>
		        </div>
		        <div class="form-row">
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                	<input value="{{ employee.birthdate }}" type="text" id="date-picker-example" name="birthdate" class="form-control datepicker" >
							<label for="date-picker-example">{{ trans.birthdate }}</label>
		                </div>
		            </div>
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                    <input type="text" class="form-control" id="inputPhone" name="phone" value="{{ employee.phone }}">
		                    <label for="inputPhone">{{ trans.phone }}</label>
		                </div>
		            </div>
		        </div>                                                        
		        <div class="form-row">
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                	<input value="{{ employee.contract_start }}" type="text" id="date-picker-example" name="contractStart" class="form-control datepicker" >
							<label for="date-picker-example">{{ trans.contractStart }}</label>
		                </div>
		            </div>
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                	<input value="{{ employee.contract_end }}" type="text" id="date-picker-example" name="contractEnd" class="form-control datepicker" >
							<label for="date-picker-example">{{ trans.contractEnd }}</label>
		                </div>
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-md-12">
						<div class="inline">
							<div class="form-check">
						        <input class="form-check-input" type="radio" name="contractRadio" id="exampleRadiosInline1" value="CDI" checked>
						        <label class="form-check-label" for="exampleRadiosInline1">
						            CDI
						        </label>
						    </div>
						    <div class="form-check">
						        <input class="form-check-input" type="radio" name="contractRadio" id="exampleRadiosInline2" value="CDD">
						        <label class="form-check-label" for="exampleRadiosInline2">
						            CDD
						        </label>
						    </div>
						    <div class="form-check">
						        <input class="form-check-input" type="radio" name="contractRadio" id="exampleRadiosInline3" value="Stage">
						        <label class="form-check-label" for="exampleRadiosInline3">
						            Stage
						        </label>
						    </div>
						</div>						
		            </div>
		        </div>
		        <br>
		        <div class="form-row">
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                   <input type="text" class="form-control" id="inputHourNumber" name="hourNumber" value="20">
		                    <label for="inputHourNumber">{{ trans.hourNumber }}</label>
		                </div>
		            </div>
		            <div class="col-md-6">
		                <div class="md-form form-group">
		                    <input type="text" class="form-control" id="inputVacationDayTotal" name="vacationDayTotal" value="{{ employee.vacation_day_total }}">
		                    <label for="inputVacationDayTotal">{{ trans.vacationDayTotal }}</label>
		                </div>
		            </div>
		        </div>
		    </div>
		    <div class="modal-footer">
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ trans.close }}</button>
		        <button type="submit" class="btn btn-primary">{{ trans.saveChanges }}</button>
		    </div>
		</form>
    </div>
</main>
{% endblock %}
{% block javascript %}
	{% include 'employeesManagement/js/employeesManagement.js' %}
    {% if success == true %}
    <script>
         toastr["success"](" {{ trans.modifySuccess }} ");
    </script>
    {% endif %}
{% endblock %}
