                            </li>
                            <li><a href="?url=employeesManagement" class="waves-effect arrow-r"><i class="fa fa-chevron-right"></i> {{ trans.employeesManagement }}</a>
                            </li>
                        {% endif %}
                        <li><a href="?url=orderExplorer" class="waves-effect arrow-r"><i class="fa fa-chevron-right"></i> {{ trans.orderExplorer }}</a>
                        </li>
                        <li><a class="waves-effect arrow-r" href="?url=cashDesk"><i class="fa fa-chevron-right"></i> {{ trans.cashDesk }}</a>
                        <li><a class="waves-effect arrow-r" href="?url=kitchenInterface"><i class="fa fa-chevron-right"></i> {{ trans.kitchenInterface }}</a>
