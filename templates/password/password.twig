{% extends 'base.twig' %}

{% block header %}{% endblock %}
{% block content %}
    {% include 'password/css/password.css' %}
    <header>

        <!--Intro Section-->
        <section class="view intro-2 hm-stylish-strong" style="height:100vh; z-index:0;">
            <div class="full-bg-img flex-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5" id="cardBody">

                            <!--Form with header-->
                            <div class="card wow fadeIn" data-wow-delay="0.3s">
                                <div class="card-body">
                                    <input type="hidden" name="formName" value="generatePassword">
                                    <!--Header-->
                                    <div class="form-header success-color-dark">
                                        <h3><i class="fa fa-user mt-2 mb-2"></i> {{ trans.login }}</h3>
                                    </div>

                                    <!--Body-->
                                    <div class="md-form">
                                        <i class="fa fa-envelope prefix white-text"></i>
                                        <input type="text" id="getEmail" class="form-control" name="email">
                                        <label for="orangeForm-email">{{ trans.yourEmail }}</label>
                                    </div>
                                    <div class="text-center">
                                        <input type="submit" class="btn success-color-dark btn-lg" id="confirm" value="{{ trans.confirm }}">
                                        <hr>
                                    </div>
                                </div>
                            </div>
                            <!--/Form with header-->

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
{% endblock %}
{% block footer %}{% endblock %}
{% block javascript %}
{% include 'password/js/password.js' %}
{% endblock %}
