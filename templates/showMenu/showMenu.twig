{% extends 'base.twig' %}

{% block content %}
<main style="background: url('/assets/images/bg_cashDesk.jpg')no-repeat center center fixed;background-size: cover;">
    <div class="container">
        <section class="section  view hm-black-strong-1 jarallax mt-5">
            <!-- Section About -->
            <section id="specials" class="section feature-box text-center mt-5 mb-5 text-white">
                <!-- Section title -->
                <h2 class="section-heading text-center mb-5 text-uppercase font-weight-bold wow fadeIn" data-wow-delay="0.2s">{{ trans.galery }}</h2>
                <p class="text-center w-responsive mx-auto my-5 wow fadeIn" data-wow-delay="0.2s">{{ trans.descriptionGalery }}</p>
                <!-- First row -->
                <div class="row  wow fadeIn" data-wow-delay="0.4s">
                    <!-- First column -->
                    <div class="col-md-4 mb-6">
                        <!--Panel-->
                        <div id="choice1" class="card card-body  green darken-3 hoverable">
                            <i class="fa fa-leaf fa-3x mb-4 mt-3 white-text" aria-hidden="true"></i>
                            <h5 class="feature-title font-weight-bold white-text text-uppercase">{{ trans.apetizer }}</h5>
                        </div>
                        <!--/.Panel-->
                    </div>
                    <!-- /First column -->
                    <!-- Second column -->
                    <div class="col-md-4 mb-6">
                        <!--Panel-->
                        <div id="choice2" class="card card-body amber hoverable">
                            <i class="fa fa-cutlery fa-3x mb-4 mt-3 white-text" aria-hidden="true"></i>
                            <h5 class="feature-title white-text text-uppercase">{{ trans.dishes }}</h5>
                        </div>
                        <!--/.Panel-->
                    </div>
                    <!-- /.Second column -->
                    <!-- Third column -->
                    <div class="col-md-4 mb-6">
                        <!--Panel-->
                        <div id="choice3" class="card card-body light-blue darken-3 hoverable">
                            <i class="fa fa-birthday-cake fa-3x mb-4 mt-3 white-text" aria-hidden="true"></i>
                            <h5 class="feature-title white-text text-uppercase">{{ trans.dessert }}</h5>
                        </div>
                        <!--/.Panel-->
                    </div>
                    <div class="col-md-4 mb-6 mt-2">
                        <!--Panel-->
                        <div id="choice4" class="card card-body cyan lighten-3 hoverable">
                            <i class="fa fa-leaf fa-3x mb-4 mt-3 white-text" aria-hidden="true"></i>
                            <h5 class="feature-title white-text text-uppercase">{{ trans.salad}}</h5>
                        </div>
                        <!--/.Panel-->
                    </div>
                    <div class="offset-4 col-md-4 mb-6 mt-2">
                        <!--Panel-->
                        <div id="choice5" class="card card-body deep-purple lighten-1 hoverable">
                            <i class="fa fa-glass fa-3x mb-4 mt-3 white-text" aria-hidden="true"></i>
                            <h5 class="feature-title white-text text-uppercase">{{ trans.drink }}</h5>
                        </div>
                        <!--/.Panel-->
                    </div>

                </div>
                <!-- /.First row -->
            </section>
            <!-- /.Second section -->
            <!--Carousel Wrapper-->
            <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
                <!--Indicators-->

                <!--/.Indicators-->

                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <!--ENTREE -->
                    <div class="carousel-item active">
                        <h4 class="card-title text-center text-white">{{ trans.apetizer }}</h4>
                        {% for product in products[0] %}
                            <div class="col-md-4">
                                <div class="card mb-2">
                                    <img class="card-img-top" src="/assets/images/products/{{ product.img }}" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ product.name }}</h4>
                                        <p class="card-text">{{ product.description }}</p>
                                        <p class="card-title font-bold">{{ product.price }}€</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- PLAT -->

                    <div class="carousel-item">
                        <h4 class="card-title text-center text-white">{{ trans.dishes }}</h4>
                        {% for product in products[1] %}
                            <div class="col-md-4">
                                <div class="card mb-2">
                                    <img class="card-img-top" src="/assets/images/products/{{ product.img }}" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ product.name }}</h4>
                                        <p class="card-text">{{ product.description }}</p>
                                        <p class="card-title font-bold">{{ product.price }}€</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                    <!--Third slide-->
                    <div class="carousel-item">
                        <h4 class="card-title text-center text-white">{{ trans.dessert }}</h4>
                        {% for product in products[3] %}
                            <div class="col-md-4">
                                <div class="card mb-2">
                                    <img class="card-img-top" src="/assets/images/products/{{ product.img }}" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ product.name }}</h4>
                                        <p class="card-text">{{ product.description }}</p>
                                        <p class="card-title font-bold">{{ product.price }}€</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="carousel-item">
                        <h4 class="card-title text-center text-white">{{ trans.salad }}</h4>
                        {% for product in products[2] %}
                            <div class="col-md-4">
                                <div class="card mb-2">
                                    <img class="card-img-top" src="/assets/images/products/{{ product.img }}" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ product.name }}</h4>
                                        <p class="card-text">{{ product.description }}</p>
                                        <p class="card-title font-bold">{{ product.price }}€</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="carousel-item">
                        <h4 class="card-title text-center text-white">{{ trans.drink }}</h4>
                        {% for product in products[4] %}
                            <div class="col-md-4">
                                <div class="card mb-2">
                                    <img class="card-img-top" src="/assets/images/products/{{ product.img }}" alt="Card image cap">
                                    <div class="card-body">
                                        <h4 class="card-title">{{ product.name }}</h4>
                                        <p class="card-text">{{ product.description }}</p>
                                        <p class="card-title font-bold">{{ product.price }}€</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!--/.Slides-->
                <ol class="carousel-indicators">
                    <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
                    <li data-target="#multi-item-example" data-slide-to="1"></li>
                    <li data-target="#multi-item-example" data-slide-to="2"></li>
                    <li data-target="#multi-item-example" data-slide-to="3"></li>
                    <li data-target="#multi-item-example" data-slide-to="4"></li>
                </ol>
            </div>
        </section>
    </div>
</main>
{% endblock %}
{% block footer %}{% endblock %}
{% block javascript %}
    {% include 'showMenu/js/showMenu.js' %}
{% endblock %}